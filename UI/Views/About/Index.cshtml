    var company = ViewData["Company"] as UiInfoVm;
}
@{
    ViewData["Title"] = "About";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Title -->
<div class="page-title light-background">
    <div class="container d-lg-flex justify-content-between align-items-center">
        <h1 class="mb-2 mb-lg-0">About</h1>
        <nav class="breadcrumbs">
            <ol>
                <li><a href="index.html">Home</a></li>
                <li class="current">About</li>
            </ol>
        </nav>
    </div>
</div><!-- End Page Title -->
<!-- About 2 Section -->
<section id="about-2" class="about-2 section">

    <div class="container" data-aos="fade-up">
        <div class="row g-4 g-lg-5" data-aos="fade-up" data-aos-delay="200">

            <div class="col-lg-5">
                <div class="about-img">
                    <img src="/images/About/@company?.Abouts?.Img" alt="About Image" class="img-fluid"
                         onerror="this.onerror=null;this.src='/ProjectRootImg/default-user.png';">
                </div>
            </div>

            <div class="col-lg-7">
                <h3 class="pt-0 pt-lg-5">@company?.Abouts?.Title</h3>
                <p>@company?.Abouts?.Description</p>

                <!-- Tabs -->
                <ul class="nav nav-pills mb-3" id="aboutTabs" role="tablist">
                    @if (company?.Abouts?.SubAbouts != null)
                    {
                        int tabIndex = 1;
                        foreach (var item in company?.Abouts?.SubAbouts)
                        {
                            var activeClass = tabIndex == 1 ? "active" : "";
                            <li class="nav-item" role="presentation">
                                <a class="nav-link @activeClass" data-bs-toggle="pill" href="#@item.Id" role="tab">@item.Title</a>
                            </li>
                            tabIndex++;
                        }
                    }
                    else
                    {
                        <p>No topics available for this section.</p>
                    }
                </ul><!-- End Tabs -->
                <!-- Tab Content -->
                <div class="tab-content" id="aboutTabsContent">
                    @if (company?.Abouts?.SubAbouts != null)
                    {
                        int tabIndex = 1;
                        foreach (var item in company?.Abouts?.SubAbouts)
                        {
                            var activeClass = tabIndex == 1 ? "show active" : "fade";
                            <div class="tab-pane @activeClass" id="@item.Id" role="tabpanel">
                                <p class="fst-italic">@item?.Description</p>
                                @if (item?.AboutTopics != null)
                                {
                                    @foreach (var topic in item?.AboutTopics)
                                    {
                                        <div class="d-flex align-items-center mt-4">
                                            <i class="bi bi-check2"></i>
                                            <h4>@topic.Title</h4>
                                        </div>
                                        <p>@topic?.Description</p>
                                    }
                                }
                                
                            </div>
                            tabIndex++;
                        }
                    }
                </div><!-- End Tab Content -->
            </div><!-- End Column -->

        </div><!-- End Row -->
    </div><!-- End Container -->





</section><!-- /About 2 Section -->
