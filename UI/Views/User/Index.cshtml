@model UI.Models.User
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DashboirdLayout.cshtml";
}
@{
    var EntityName = "User";
    var AddBtnId = $"COMERP_Create{EntityName}Btn";
    var ItemTableName = $"{EntityName} Tables";
    var TableID = $"COMERP_{EntityName}Table";
    var DeleteModelId = $"COMERP_delete{EntityName}Model";
}
<main id="main" class="main">
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body pt-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="pagetitle">
                                <h1>@ItemTableName</h1>
                                <nav>
                                    <ol class="breadcrumb">
                                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboird">Home</a></li>
                                        <li class="breadcrumb-item">Administrators</li>
                                        <li class="breadcrumb-item active">@EntityName</li>
                                    </ol>
                                </nav>
                            </div><!-- End Page Title -->
                            <button type="button" id=@AddBtnId class="btn btn-success">
                                <i class="bi bi-plus-circle"></i> Add @EntityName
                            </button>
                        </div>
                        <!-- Table with stripped rows -->
                        <table class="display responsive nowrap" style="width:100%" id=@TableID></table>
                        <!-- End Table with stripped rows -->
                        

                    </div>
                </div>

            </div>
        </div>
    </section>
</main><!-- End #main -->
@await Html.PartialAsync("~/Views/User/_RegisterFormModel.cshtml", Model)
@await Html.PartialAsync("~/Views/Common/_DeleteModal.cshtml", null, new ViewDataDictionary(ViewData)
{
    { "DeleteModelId", DeleteModelId }
})

@section Scripts {
    <script type="module" src="~/js/comerp_dashboird/comerp_user.js" asp-append-version="true"></script>
}