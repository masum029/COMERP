@using UI.ViewModel
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    var company = ViewData["Company"] as UiInfoVm;
}
<!-- Hero Section -->
<section id="hero" class="hero section dark-background">

    <div id="hero-carousel" class="carousel slide carousel-fade" data-bs-ride="carousel" data-bs-interval="5000">


        @{
            if (company?.Sliders != null)
            {
                foreach (var slider in company?.Sliders)
                {
                    <div class="carousel-item active">
                        <img src="/images/slider/@slider?.ImageUrl"
                             alt="Slaider img"
                             onerror="this.onerror=null;this.src='/ProjectRootImg/default-user.png';">
                        <div class="carousel-container">
                            <h2>@slider?.Title<br></h2>
                            <p>@slider?.Subtitle</p>
                            <a href=@slider?.LinkUrl class="btn-get-started">Get Started</a>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="carousel-item active">
                    <img src="~/client/assets/img/hero-carousel/hero-carousel-1.jpg" alt="">
                    <div class="carousel-container">
                        <h2>Welcome to Sailor<br></h2>
                        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
                        <a href="#featured-services" class="btn-get-started">Get Started</a>
                    </div>
                </div>   
            }
        }
        <a class="carousel-control-prev" href="#hero-carousel" role="button" data-bs-slide="prev">
            <span class="carousel-control-prev-icon bi bi-chevron-left" aria-hidden="true"></span>
        </a>

        <a class="carousel-control-next" href="#hero-carousel" role="button" data-bs-slide="next">
            <span class="carousel-control-next-icon bi bi-chevron-right" aria-hidden="true"></span>
        </a>

        <ol class="carousel-indicators"></ol>

    </div>

</section><!-- /Hero Section -->
<!-- About Section -->
<section id="about" class="about section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>About</h2>
        <p>About Us<br></p>
    </div><!-- End Section Title -->

    <div class="container">

        <div class="row gy-4">

            @{
                if(company?.Abouts != null)
                {
                    <div class="col-lg-6 content" data-aos="fade-up" data-aos-delay="100">
                        <p>
                            @company?.Abouts?.Title
                        </p>
                        <ul>
                            @foreach (var sub in company?.Abouts?.SubAbouts)
                            {
                                <li><i class="bi bi-check2-circle"></i> <span>@sub?.Title</span></li>
                            }
                        </ul>
                    </div>

                    <div class="col-lg-6" data-aos="fade-up" data-aos-delay="200">
                        <p>
                            @company?.Abouts?.Description
                        </p>
                        <a asp-action="Index" asp-controller="About" class="read-more"><span>Read More</span><i class="bi bi-arrow-right"></i></a>
                    </div>
                }
                else
                {
                    <div class="col-lg-6 content" data-aos="fade-up" data-aos-delay="100">
                        <p>
                            Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore
                            magna aliqua.
                        </p>
                        <ul>
                            <li><i class="bi bi-check2-circle"></i> <span>Ullamco laboris nisi ut aliquip ex ea commodo consequat.</span></li>
                            <li><i class="bi bi-check2-circle"></i> <span>Duis aute irure dolor in reprehenderit in voluptate velit.</span></li>
                            <li><i class="bi bi-check2-circle"></i> <span>Ullamco laboris nisi ut aliquip ex ea commodo</span></li>
                        </ul>
                    </div>

                    <div class="col-lg-6" data-aos="fade-up" data-aos-delay="200">
                        <p>Ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum. </p>
                        <a asp-action="Index" asp-controller="About" class="read-more"><span>Read More</span><i class="bi bi-arrow-right"></i></a>
                    </div>
                }
            }

            

        </div>

    </div>

</section><!-- /About Section -->
<!-- Clients Section -->
<section id="clients" class="clients section light-background">

    <div class="container" data-aos="fade-up">

        <div class="row gy-4">

            @{
                if(company.Clients != null)
                {
                    foreach (var client in company?.Clients)
                    {
                        <div class="col-xl-2 col-md-3 col-6 client-logo">

                            <img src="/images/Client_icom/@client?.Icon"
                                 alt="client img"
                                 class="img-fluid"
                                 onerror="this.onerror=null;this.src='/ProjectRootImg/default-user.png';">
                        </div>
                    }
                }
                else
                {
                    <div class="col-xl-2 col-md-3 col-6 client-logo">
                        <img src="~/client/assets/img/clients/client-1.png" class="img-fluid" alt="">
                    </div>
                }
            }

        </div>

    </div>

</section><!-- /Clients Section -->
<!-- Services Section -->
<section id="services" class="services section">

    <div class="container">

        <div class="row gy-4">
            @{

                if(company.Services != null)
                {
                    foreach (var serv in company?.Services)
                    {
                        <div class="col-md-6" data-aos="fade-up" data-aos-delay="100">
                            <div class="service-item d-flex position-relative h-100">
                                <i class="bi @serv?.Icon icon flex-shrink-0"></i>
                                <div>
                                    <h4 class="title"><a href="#" class="stretched-link">@serv?.Name</a></h4>
                                    <p class="description">@serv?.Description</p>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    var icom = "bi-arrow-through-heart";
                    <div class="col-md-6" data-aos="fade-up" data-aos-delay="100">
                        <div class="service-item d-flex position-relative h-100">
                            <i class="bi @icom icon flex-shrink-0"></i>
                            <div>
                                <h4 class="title"><a href="#" class="stretched-link">Lorem Ipsum</a></h4>
                                <p class="description">Voluptatum deleniti atque corrupti quos dolores et quas molestias excepturi sint occaecati cupiditate non provident</p>
                            </div>
                        </div>
                    </div>
                }
                

               
            }

           
            

        </div>

    </div>

</section><!-- /Services Section -->
