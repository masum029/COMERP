@model UI.Models.Service
@using System.Security.Claims
@using Microsoft.IdentityModel.JsonWebTokens
@using System.Text.RegularExpressions


@{
    var EntityName = "Service";
    var splitEntityName = Regex.Replace(EntityName, "(?<!^)([A-Z])", " $1");
    var ModelID = $"COMERP_{EntityName}ModelCreate";
    var FromID = $"{EntityName}Form";
    var SaveChangesId = $"btnSave{EntityName}";
    var UpdateId = $"btnUpdate{EntityName}";
    var AddLabel = $"{EntityName}ModalLabelAdd";
    var UpdateLabel = $"{EntityName}ModalLabelUpdate";
}

<div class="modal fade" id=@ModelID tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id=@AddLabel class="modal-title">Create @splitEntityName</h5>
                <h5 id=@UpdateLabel class="modal-title">Update @splitEntityName</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id=@FromID class="row g-3">
                    <div class="col-md-4 note">
                        <label asp-for="Name" class="form-label">
                            Name
                            <span class="text-danger font-weight-bold">*</span>
                        </label>
                        <input type="text" asp-for="Name" class="form-control" id="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="DurationHours" class="form-label">
                            Duration (h)
                        </label>
                        <input type="number" asp-for="DurationHours" class="form-control" id="DurationHours">
                        <span asp-validation-for="DurationHours" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Price" class="form-label">
                            Price
                            <span class="text-danger font-weight-bold">*</span>
                        </label>
                        <input type="number" asp-for="Price" class="form-control" id="Price">
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
    

                    <div class="col-md-12">
                        <label asp-for="Description" class="form-label">
                            Description
                        </label>
                        <textarea asp-for="Description" type="text" class="form-control" placeholder="Description" id="Description" style="height: 100px;"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="col-md-12">
                        <label asp-for="Icon" class="form-label">
                            Icon Name
                            <span class="text-danger font-weight-bold">*</span>
                        </label>
                        <div class="d-flex align-items-center">
                            <!-- Icon Preview -->
                            <div id="iconPreview" class="me-2" style="font-size: 24px;"></div>
                            <!-- Icon Input Field -->
                            <input type="text" asp-for="Icon" class="form-control" id="Icon" placeholder="e.g., bi bi-briefcase">
                        </div>
                        <span asp-validation-for="Icon" class="text-danger"></span>
                        <small class="form-text text-muted">
                            Enter the Bootstrap icon class name. For available icons, visit
                            <a href="https://icons.getbootstrap.com/" target="_blank">Bootstrap Icons</a>.
                        </small>
                    </div>

                    
                    <div class="col-md-9">
                        <label asp-for="CompanyId" class="form-label">
                            Company
                            <span class="text-danger font-weight-bold">*</span>
                        </label>
                        <select class="form-control" asp-for="CompanyId" id="CompanyDropdown">
                            <option value="">Select Company</option>
                        </select>
                        <span asp-validation-for="CompanyId" class="text-danger"></span>
                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id=@SaveChangesId>Save changes</button>
                <button type="button" class="btn btn-primary" id=@UpdateId>Update</button>
            </div>
        </div>
    </div>
</div><!-- End Large Modal-->

